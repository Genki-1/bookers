<!DOCTYPE html>
<html>
<head>
	<title>WebCampBackendNew</title>
</head>
<body>

	<h1>Editing Book</h1>
	<%= form_for(@book) do |b| %>
		<div class="field">
	    	<h4>Title</h4>
	    	<%= b.text_field :title %>
	    </div>

	    <div class="field">
	    	<h4>Body</h4>
	    	<%= b.text_area :body %>
	    </div>

	    <div class="action">
	    	<%= b.submit 'Update Book' %>
	    </div>

	<% end %>

	
		<%=link_to "Show", "/books/#{@book.id}" %>
		|
		<%=link_to "Back", "/books" %>
	
</body>
</html>

