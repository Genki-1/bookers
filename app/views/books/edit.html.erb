<!DOCTYPE html>
<html>
<head>
	<title>WebCampBackendNew</title>
</head>
<body>

	<h1>Editing Book</h1>

	<% if @book.errors.any? %>
      <div id="error_explanation">
        <h4><%= @book.errors.count %> errors prohibited this book from being saved:</h4>
 
        <ul>
          <% @book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


	<%= form_for(@book) do |b| %>


		<div class="field">
	    	<%= b.label :title, "Title" %>
	    	<%= b.text_field :title %>
	    </div>

	    <div class="field">
	    	<%= b.label :body, "Body" %>
	    	<%= b.text_area :body %>
	    </div>

	    <div class="action">
	    	<%= b.submit 'Update Book' %>
	    </div>

	<% end %>

	
		<%=link_to "Show", "/books/#{@book.id}" %>
		|
		<%=link_to "Back", "/books" %>
	
</body>
</html>


