<!DOCTYPE html>
<html>
<head>
  <title>WebCampBackendNew</title>
</head>
<body>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<h2>New book</h2>

<%= form_for(@book) do |b| %>
 
    <h4>Title</h4>
    <%= b.text_field :title %>
 
    <h4>Body</h4>
    <%= b.text_area :body %>
 
    <p><%= b.submit 'Create Book' %></p>
 
<% end %>


</body>
</html>